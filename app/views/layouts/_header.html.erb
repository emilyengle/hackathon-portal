<!-- Fixed navbar -->
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">OHI/O Sponsor Portal</a>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <% if current_user %>
          <li>
            <%= link_to "Users", users_path %>
          </li>
          <li>
            <%= link_to "Sponsors", sponsors_path %>
          </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li>
            <%= link_to("#{current_user.first_name}", current_user) %>
          </li>
          <li>
            <%= link_to('Edit Account', edit_user_path(current_user)) %>
          </li>
          <li>
            <%= link_to('Sign Out', logout_path, :method => :delete) %>
          </li>
        <% else %>
          <li>
            <%= form_for(:user, :url => login_path, html: { class: "navbar-form navbar-right form-inline" }) do |f| %>
              <div class="form-group">
                <%= f.text_field :username, :placeholder => "Username", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, :placeholder => "Password", class: "form-control"  %>
              </div>
              <%= f.submit 'Sign In', class: "btn btn-default" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>
