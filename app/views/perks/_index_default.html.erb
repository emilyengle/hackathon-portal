<h1>Perks</h1>

<%= link_to "Create a new Perk", new_perk_path %>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Level</th>
    <th>Destroy</th>
  </tr>
  <% @perks.sort_by { |perk| Perk.levels[perk.level] }.each do |perk| %>
    <tr>
      <td><%= link_to perk.name, edit_perk_path(perk) %></td>
      <td><%= perk.description %></td>
      <td><%= perk.level.titleize %></td>
      <td><%= link_to "Destroy", perk_path(perk), :method => :delete, :confirm => "Are you sure?", :class => "btn btn-default" %></td>
    </tr>
  <% end %>
</table>
