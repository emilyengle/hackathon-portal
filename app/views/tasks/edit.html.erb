<h1>Edit <%= @task.name %></h1>

<%= form_for(@task, :html => { :class => "form-horizontal" }) do |f| %>
  <div class="form-group">
    <%= f.text_field :name, :placeholder => "Name", class: "form-control", required: true, autofocus: true  %>
  </div>
  <div class="form-group">
    <%= f.text_field :description, :placeholder => "Description", class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.text_field :related_url, :placeholder => "Related URL", class: "form-control"  %>
  </div>

  <%= f.submit 'Update Task', class: "btn btn-default" %>
<% end %>
